---
export interface Props {
  id: string;
  title: string;
  date: Date;
  tag: string;
  summary: string;
}

const { id, title, date, tag, summary } = Astro.props as Props;
---

<article 
  class="bg-white rounded-2xl shadow-lg border p-8 hover:shadow-2xl hover:-translate-y-1 transition-all duration-300"
  data-news-id={id}
>
  <div class="flex items-start justify-between mb-6">
    <div class="flex items-center space-x-4">
      <span class={`px-4 py-2 rounded-full text-sm font-semibold ${
        tag === 'Publication' ? 'bg-blue-100 text-blue-800' :
        tag === 'Award' ? 'bg-yellow-100 text-yellow-800' :
        tag === 'Funding' ? 'bg-green-100 text-green-800' :
        tag === 'Conference' ? 'bg-purple-100 text-purple-800' :
        tag === 'Team' ? 'bg-pink-100 text-pink-800' :
        tag === 'Partnership' ? 'bg-indigo-100 text-indigo-800' :
        tag === 'Event' ? 'bg-orange-100 text-orange-800' :
        'bg-gray-100 text-gray-800'
      }`}>
        {tag}
      </span>
    </div>
    <div class="bg-gray-50 px-4 py-2 rounded-lg">
      <time class="text-sm text-gray-600 font-medium" datetime={date.toISOString()}>
        {date.toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' })}
      </time>
    </div>
  </div>

  <h2 class="text-2xl font-bold text-gray-900 mb-4 leading-tight">
    {title}
  </h2>

  {summary && (
    <p class="text-gray-600 leading-relaxed text-lg">{summary}</p>
  )}
</article>

