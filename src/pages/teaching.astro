---
import BaseLayout from '../layouts/BaseLayout.astro';
import Banner from '../components/Banner.astro';

const courses = [
  {
    code: "CS5566",
    title: "Advanced Deep Learning",
    semester: "Fall 2024",
    credits: 3,
    description: "Comprehensive study of deep learning architectures, optimization techniques, and applications. Covers CNNs, RNNs, Transformers, and recent advances in the field.",
    prerequisites: ["Linear Algebra", "Probability Theory", "Machine Learning Fundamentals"],
    topics: [
      "Neural Network Fundamentals",
      "Convolutional Neural Networks",
      "Recurrent Neural Networks", 
      "Attention Mechanisms and Transformers",
      "Generative Models (GANs, VAEs)",
      "Reinforcement Learning",
      "Model Optimization and Regularization",
      "Transfer Learning and Meta-Learning"
    ],
    status: "Active"
  },
  {
    code: "CS5567",
    title: "Distributed Systems for AI",
    semester: "Spring 2024", 
    credits: 3,
    description: "Focus on distributed computing systems designed for AI workloads, including parallel training, federated learning, and edge computing architectures.",
    prerequisites: ["Operating Systems", "Computer Networks", "Algorithms"],
    topics: [
      "Parallel and Distributed Computing",
      "MapReduce and Spark for ML",
      "Parameter Server Architectures", 
      "Federated Learning Systems",
      "Edge Computing for AI",
      "Container Orchestration",
      "Load Balancing and Fault Tolerance",
      "Performance Optimization"
    ],
    status: "Active"
  },
  {
    code: "CS4455",
    title: "Machine Learning Systems",
    semester: "Fall 2024",
    credits: 3,
    description: "Practical aspects of building and deploying machine learning systems at scale, covering MLOps, model serving, and production considerations.",
    prerequisites: ["Data Structures", "Machine Learning", "Software Engineering"],
    topics: [
      "ML Pipeline Design",
      "Data Engineering for ML",
      "Model Training and Validation",
      "Model Deployment and Serving",
      "Monitoring and Maintenance",
      "A/B Testing for ML",
      "Ethics and Fairness in AI",
      "AutoML and Model Governance"
    ],
    status: "Active"
  },
  {
    code: "CS6677",
    title: "Advanced Computer Vision",
    semester: "Spring 2025",
    credits: 3,
    description: "Advanced topics in computer vision including 3D vision, multimodal learning, and applications in autonomous systems and robotics.",
    prerequisites: ["Computer Vision", "Deep Learning", "Linear Algebra"],
    topics: [
      "3D Computer Vision",
      "Object Detection and Segmentation",
      "Visual Recognition and Retrieval",
      "Multimodal Learning",
      "Vision for Autonomous Systems",
      "Medical Image Analysis",
      "Video Understanding",
      "Neural Rendering"
    ],
    status: "Upcoming"
  }
];

const resources = [
  {
    title: "Lecture Slides and Notes",
    description: "Comprehensive lecture materials covering all course topics with detailed explanations and examples.",
    icon: "üìö",
    items: ["PDF slides with animations", "Handwritten notes", "Interactive notebooks"]
  },
  {
    title: "Programming Assignments",
    description: "Hands-on coding assignments to reinforce theoretical concepts with practical implementation.",
    icon: "üíª", 
    items: ["Jupyter notebooks", "Starter code templates", "Autograder integration"]
  },
  {
    title: "Research Papers",
    description: "Curated collection of seminal and recent papers relevant to course topics.",
    icon: "üìÑ",
    items: ["Required readings list", "Supplementary papers", "Paper discussion guides"]
  },
  {
    title: "Video Lectures",
    description: "Recorded lectures and tutorials available for review and self-paced learning.",
    icon: "üé•",
    items: ["HD video recordings", "Searchable transcripts", "Mobile-friendly access"]
  }
];

const upcomingEvents = [
  {
    date: "2024-12-20",
    title: "AI Systems Workshop",
    type: "Workshop",
    description: "Hands-on workshop covering the latest trends in AI system design and implementation."
  },
  {
    date: "2024-12-15", 
    title: "Guest Lecture: Industry Perspectives on MLOps",
    type: "Guest Lecture",
    description: "Industry expert sharing real-world experiences in deploying ML systems at scale."
  },
  {
    date: "2025-01-10",
    title: "Spring Semester Course Registration",
    type: "Registration",
    description: "Registration opens for Spring 2025 courses including Advanced Computer Vision."
  }
];
---

<BaseLayout 
  pageTitle="Teaching"
  description="Courses and educational resources from NYCU ADSL Lab"
>
  <div class="bg-white">
    <!-- Hero Section -->
    <Banner 
      title="Teaching & Education"
      subtitle="Cutting-edge courses in AI, machine learning, and systems, blending theory with hands-on practice."
      imageUrl="https://images.unsplash.com/photo-1513258496099-48168024aec0?auto=format&fit=crop&w=2134&q=80"
      heightClass="py-20"
      overlayClass="bg-black/60"
    />
    
    <div class="container mx-auto px-4 sm:px-6 lg:px-8 py-16">

      <!-- Course Offerings -->
      <section class="mb-20">
        <div class="text-center mb-12">
          <h2 class="text-3xl sm:text-4xl font-bold text-gray-900 mb-4">Course Offerings</h2>
          <div class="w-24 h-1 bg-gradient-to-r from-blue-600 to-indigo-600 mx-auto mb-6"></div>
          <p class="text-xl text-gray-600 max-w-3xl mx-auto">
            Comprehensive curriculum covering the latest in AI and systems
          </p>
        </div>
        
        <div class="grid gap-8">
          {courses.map((course) => (
            <div class="bg-white rounded-2xl shadow-lg border p-8 hover:shadow-2xl hover:-translate-y-1 transition-all duration-300">
          <div class="flex flex-wrap items-start justify-between mb-4">
            <div class="flex items-center space-x-3">
              <h3 class="text-2xl font-semibold text-gray-900">{course.title}</h3>
              <span class="bg-blue-100 text-blue-800 px-2 py-1 rounded text-sm font-medium">
                {course.code}
              </span>
            </div>
            <div class="flex items-center space-x-3">
              <span class={`px-3 py-1 rounded-full text-xs font-medium ${
                course.status === 'Active' 
                  ? 'bg-green-100 text-green-800' 
                  : 'bg-orange-100 text-orange-800'
              }`}>
                {course.status}
              </span>
              <span class="text-gray-500">{course.semester} ‚Ä¢ {course.credits} Credits</span>
            </div>
          </div>
          
          <p class="text-gray-600 mb-6">{course.description}</p>
          
          <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
            <div>
              <h4 class="font-semibold text-gray-900 mb-3">Prerequisites</h4>
              <ul class="space-y-1 text-sm text-gray-600">
                {course.prerequisites.map((prereq) => (
                  <li class="flex items-start">
                    <span class="text-blue-600 mr-2">‚Ä¢</span>
                    {prereq}
                  </li>
                ))}
              </ul>
            </div>
            
            <div>
              <h4 class="font-semibold text-gray-900 mb-3">Key Topics</h4>
              <div class="grid grid-cols-1 gap-1 text-sm text-gray-600">
                {course.topics.slice(0, 4).map((topic) => (
                  <div class="flex items-start">
                    <span class="text-blue-600 mr-2">‚Ä¢</span>
                    {topic}
                  </div>
                ))}
                {course.topics.length > 4 && (
                  <div class="text-blue-600 text-sm mt-1 cursor-pointer hover:underline">
                    +{course.topics.length - 4} more topics...
                  </div>
                )}
              </div>
            </div>
          </div>
          
          <div class="mt-6 pt-6 border-t flex flex-wrap gap-3">
            <button class="bg-blue-600 text-white px-4 py-2 rounded-lg hover:bg-blue-700 transition-colors">
              Course Materials
            </button>
            <button class="border border-gray-300 text-gray-700 px-4 py-2 rounded-lg hover:bg-gray-50 transition-colors">
              Syllabus (PDF)
            </button>
            {course.status === 'Active' && (
              <button class="border border-blue-300 text-blue-600 px-4 py-2 rounded-lg hover:bg-blue-50 transition-colors">
                Enroll Now
              </button>
            )}
          </div>
        </div>
      ))}
    </div>
  </section>

      <!-- Learning Resources -->
      <section class="mb-20">
        <div class="text-center mb-12">
          <h2 class="text-3xl sm:text-4xl font-bold text-gray-900 mb-4">Learning Resources</h2>
          <div class="w-24 h-1 bg-gradient-to-r from-blue-600 to-indigo-600 mx-auto mb-6"></div>
          <p class="text-xl text-gray-600 max-w-3xl mx-auto">
            Comprehensive materials to support your learning journey
          </p>
        </div>
        
        <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
          {resources.map((resource) => (
            <div class="group bg-white rounded-2xl shadow-lg border p-8 hover:shadow-2xl hover:-translate-y-2 transition-all duration-300">
          <div class="flex items-start space-x-6">
            <div class="text-5xl group-hover:scale-110 transition-transform duration-300">{resource.icon}</div>
            <div class="flex-1">
              <h3 class="text-xl font-bold text-gray-900 mb-4">{resource.title}</h3>
              <p class="text-gray-600 mb-6 leading-relaxed">{resource.description}</p>
              <ul class="space-y-3 text-sm text-gray-600">
                {resource.items.map((item) => (
                  <li class="flex items-start">
                    <div class="w-5 h-5 bg-green-100 text-green-600 rounded-full flex items-center justify-center mr-3 mt-0.5 flex-shrink-0">
                      <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                      </svg>
                    </div>
                    {item}
                  </li>
                ))}
              </ul>
            </div>
          </div>
        </div>
      ))}
    </div>
  </section>

      <!-- Upcoming Events -->
      <section class="mb-20">
        <div class="text-center mb-12">
          <h2 class="text-3xl sm:text-4xl font-bold text-gray-900 mb-4">Upcoming Events</h2>
          <div class="w-24 h-1 bg-gradient-to-r from-blue-600 to-indigo-600 mx-auto mb-6"></div>
          <p class="text-xl text-gray-600 max-w-3xl mx-auto">
            Stay updated with our latest educational events and workshops
          </p>
        </div>
        
        <div class="space-y-6">
          {upcomingEvents.map((event) => (
            <div class="bg-white rounded-2xl shadow-lg border p-8 flex items-start space-x-6 hover:shadow-2xl transition-shadow duration-300">
          <div class="flex-shrink-0 text-center">
            <div class="bg-gradient-to-br from-blue-500 to-blue-600 text-white px-4 py-3 rounded-2xl shadow-lg">
              <div class="text-sm font-medium">
                {new Date(event.date).toLocaleDateString('en-US', { month: 'short' })}
              </div>
              <div class="text-2xl font-bold">
                {new Date(event.date).getDate()}
              </div>
            </div>
          </div>
          <div class="flex-1">
            <div class="flex items-start justify-between">
              <div>
                <h3 class="text-lg font-semibold text-gray-900">{event.title}</h3>
                <span class="inline-block bg-gray-100 text-gray-700 px-2 py-1 rounded text-xs font-medium mt-1">
                  {event.type}
                </span>
              </div>
            </div>
            <p class="text-gray-600 mt-2">{event.description}</p>
          </div>
        </div>
      ))}
    </div>
  </section>

      <!-- Student Information -->
      <section class="bg-white rounded-3xl shadow-2xl border p-8 lg:p-12">
        <div class="text-center mb-12">
          <h2 class="text-3xl sm:text-4xl font-bold text-gray-900 mb-4">For Students</h2>
          <div class="w-24 h-1 bg-gradient-to-r from-blue-600 to-indigo-600 mx-auto mb-6"></div>
          <p class="text-xl text-gray-600 max-w-3xl mx-auto">
            Resources and support for current and prospective students
          </p>
        </div>
        
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
          <div class="bg-gradient-to-br from-blue-50 to-indigo-50 p-8 rounded-2xl">
            <h3 class="text-2xl font-bold text-gray-900 mb-6 flex items-center">
              <div class="w-8 h-8 bg-blue-600 rounded-lg flex items-center justify-center mr-3">
                <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.746 0 3.332.477 4.5 1.253v13C19.832 18.477 18.246 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"/>
                </svg>
              </div>
              Current Students
            </h3>
            <div class="space-y-4">
              <div class="flex items-start space-x-3">
                <div class="text-blue-600 text-xl">üìö</div>
                <p class="text-gray-700">Access course materials through the learning management system</p>
              </div>
              <div class="flex items-start space-x-3">
                <div class="text-blue-600 text-xl">üí¨</div>
                <p class="text-gray-700">Join course discussion forums and study groups</p>
              </div>
              <div class="flex items-start space-x-3">
                <div class="text-blue-600 text-xl">üïê</div>
                <p class="text-gray-700">Office hours: Tuesdays and Thursdays, 2-4 PM</p>
              </div>
              <div class="flex items-start space-x-3">
                <div class="text-blue-600 text-xl">üìß</div>
                <p class="text-gray-700">Email teaching assistants for assignment help</p>
              </div>
            </div>
          </div>
          
          <div class="bg-gradient-to-br from-green-50 to-emerald-50 p-8 rounded-2xl">
            <h3 class="text-2xl font-bold text-gray-900 mb-6 flex items-center">
              <div class="w-8 h-8 bg-green-600 rounded-lg flex items-center justify-center mr-3">
                <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197m13.5-9a2.5 2.5 0 11-5 0 2.5 2.5 0 015 0z"/>
                </svg>
              </div>
              Prospective Students
            </h3>
            <div class="space-y-4">
              <div class="flex items-start space-x-3">
                <div class="text-green-600 text-xl">üìã</div>
                <p class="text-gray-700">Review course prerequisites and requirements</p>
              </div>
              <div class="flex items-start space-x-3">
                <div class="text-green-600 text-xl">üìÖ</div>
                <p class="text-gray-700">Check registration dates and course availability</p>
              </div>
              <div class="flex items-start space-x-3">
                <div class="text-green-600 text-xl">üë•</div>
                <p class="text-gray-700">Attend information sessions and lab tours</p>
              </div>
              <div class="flex items-start space-x-3">
                <div class="text-green-600 text-xl">üí≠</div>
                <p class="text-gray-700">Contact faculty for research opportunities</p>
              </div>
            </div>
          </div>
        </div>
        
        <div class="mt-12 pt-8 border-t border-gray-200 text-center">
          <div class="flex flex-wrap justify-center gap-4">
            <a href="#" class="bg-blue-600 text-white px-8 py-4 rounded-xl font-semibold hover:bg-blue-700 transition-colors duration-200 shadow-lg hover:shadow-xl">
              Student Portal
            </a>
            <a href="#" class="border border-gray-300 text-gray-700 px-8 py-4 rounded-xl font-semibold hover:bg-gray-50 transition-colors duration-200">
              Academic Calendar
            </a>
            <a href="#" class="border border-gray-300 text-gray-700 px-8 py-4 rounded-xl font-semibold hover:bg-gray-50 transition-colors duration-200">
              Contact Faculty
            </a>
          </div>
        </div>
      </section>
    </div>
  </div>
</BaseLayout>