---

<BaseLayout 
  pageTitle="Members"
  description="Meet the team members of NYCU ADSL Lab"
>
  <div class="bg-white">
    <!-- Hero Section -->
    <Banner 
      title="Our Team"
      subtitle="Our diverse and talented team consists of faculty, researchers, and students working together to advance the state-of-the-art in AI and systems."
      imageUrl="https://images.unsplash.com/photo-1522071820081-009f0129c71c?auto=format&fit=crop&w=2134&q=80"
      heightClass="py-20"
      overlayClass="bg-black/60"
    />
    
    <div class="container mx-auto px-4 sm:px-6 lg:px-8 py-16">

      <!-- Faculty -->
      <section class="mb-20">
        <div class="text-center mb-12">
          <h2 class="text-3xl sm:text-4xl font-bold text-gray-900 mb-4">Faculty</h2>
          <div class="w-24 h-1 bg-gradient-to-r from-blue-600 to-indigo-600 mx-auto mb-6"></div>
          <p class="text-xl text-gray-600 max-w-3xl mx-auto">
            Leading researchers driving innovation in AI and systems
          </p>
        </div>
        
        <div class="grid grid-cols-1 lg:grid-cols-2 xl:grid-cols-3 gap-8">
          {faculty.map((member) => (
            <div class="group bg-white rounded-2xl shadow-lg border overflow-hidden hover:shadow-2xl hover:-translate-y-2 transition-all duration-300">
          <div class="aspect-w-3 aspect-h-2 bg-gradient-to-br from-gray-100 to-gray-200 flex items-center justify-center relative overflow-hidden">
            <span class="text-6xl group-hover:scale-110 transition-transform duration-300">👤</span>
            <div class="absolute inset-0 bg-blue-600 opacity-0 group-hover:opacity-10 transition-opacity duration-300"></div>
          </div>
          <div class="p-8">
            <h3 class="text-xl font-bold text-gray-900 mb-2">{member.name}</h3>
            <p class="text-blue-600 font-semibold mb-1">{member.title}</p>
            <p class="text-sm text-gray-600 mb-6">{member.position}</p>
            
            <div class="mb-6 space-y-3">
              <div class="bg-gray-50 p-3 rounded-lg">
                <p class="text-sm text-gray-600"><strong class="text-gray-900">Education:</strong> {member.education}</p>
              </div>
              <div class="bg-blue-50 p-3 rounded-lg">
                <p class="text-sm text-gray-600"><strong class="text-gray-900">Research:</strong> {member.research.join(', ')}</p>
              </div>
            </div>
            
            <p class="text-sm text-gray-600 mb-6 leading-relaxed">{member.bio}</p>
            
            <div class="flex space-x-3">
              <a href={`mailto:${member.email}`} class="flex items-center bg-blue-600 text-white px-4 py-2 rounded-lg hover:bg-blue-700 transition-colors text-sm font-medium">
                <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
                </svg>
                Email
              </a>
              <a href={member.website} class="flex items-center border border-gray-300 text-gray-700 px-4 py-2 rounded-lg hover:bg-gray-50 transition-colors text-sm font-medium">
                <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9v-9m0-9v9"/>
                </svg>
                Website
              </a>
            </div>
          </div>
        </div>
      ))}
    </div>
  </section>

  <!-- Postdocs -->
  <section class="mb-16">
    <h2 class="text-3xl font-bold text-gray-900 mb-8">Postdoctoral Researchers</h2>
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
      {postdocs.map((member) => (
        <div class="bg-white rounded-lg shadow-md border p-6 hover:shadow-lg transition-shadow">
          <div class="flex items-start space-x-4">
            <div class="w-20 h-20 bg-gray-200 rounded-lg flex items-center justify-center flex-shrink-0">
              <span class="text-2xl">👤</span>
            </div>
            <div class="flex-1">
              <h3 class="text-lg font-semibold text-gray-900">{member.name}</h3>
              <p class="text-blue-600 font-medium mb-2">{member.title}</p>
              <p class="text-sm text-gray-600 mb-2"><strong>Education:</strong> {member.education}</p>
              <p class="text-sm text-gray-600 mb-3"><strong>Research:</strong> {member.research.join(', ')}</p>
              <p class="text-sm text-gray-600 mb-3">{member.bio}</p>
              <a href={`mailto:${member.email}`} class="text-blue-600 hover:text-blue-800 text-sm">
                📧 {member.email}
              </a>
            </div>
          </div>
        </div>
      ))}
    </div>
  </section>

  <!-- PhD Students -->
  <section class="mb-16">
    <h2 class="text-3xl font-bold text-gray-900 mb-8">PhD Students</h2>
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
      {phdStudents.map((student) => (
        <div class="bg-white rounded-lg shadow-md border p-6 hover:shadow-lg transition-shadow">
          <div class="flex items-start space-x-4">
            <div class="w-16 h-16 bg-gray-200 rounded-lg flex items-center justify-center flex-shrink-0">
              <span class="text-xl">👤</span>
            </div>
            <div class="flex-1">
              <div class="flex items-center justify-between mb-2">
                <h3 class="text-lg font-semibold text-gray-900">{student.name}</h3>
                <span class="bg-blue-100 text-blue-800 px-2 py-1 rounded text-xs font-medium">
                  {student.year}
                </span>
              </div>
              <p class="text-sm text-gray-600 mb-1"><strong>Advisor:</strong> {student.advisor}</p>
              <p class="text-sm text-gray-600 mb-1"><strong>Education:</strong> {student.education}</p>
              <p class="text-sm text-gray-600 mb-3"><strong>Research:</strong> {student.research.join(', ')}</p>
              
              {student.achievements && student.achievements.length > 0 && (
                <div class="mb-3">
                  <p class="text-sm font-medium text-gray-900 mb-1">Achievements:</p>
                  <ul class="text-xs text-gray-600 space-y-1">
                    {student.achievements.map((achievement) => (
                      <li class="flex items-start">
                        <span class="text-yellow-600 mr-1">🏆</span>
                        {achievement}
                      </li>
                    ))}
                  </ul>
                </div>
              )}
              
              <a href={`mailto:${student.email}`} class="text-blue-600 hover:text-blue-800 text-sm">
                📧 {student.email}
              </a>
            </div>
          </div>
        </div>
      ))}
    </div>
  </section>

  <!-- Master's Students -->
  <section class="mb-16">
    <h2 class="text-3xl font-bold text-gray-900 mb-8">Master's Students</h2>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      {masters.map((student) => (
        <div class="bg-white rounded-lg shadow-md border p-4 hover:shadow-lg transition-shadow">
          <div class="flex items-center space-x-3 mb-3">
            <div class="w-12 h-12 bg-gray-200 rounded-lg flex items-center justify-center">
              <span class="text-lg">👤</span>
            </div>
            <div>
              <h3 class="font-semibold text-gray-900">{student.name}</h3>
              <span class="bg-green-100 text-green-800 px-2 py-1 rounded text-xs font-medium">
                {student.year}
              </span>
            </div>
          </div>
          <p class="text-sm text-gray-600 mb-1"><strong>Advisor:</strong> {student.advisor}</p>
          <p class="text-sm text-gray-600 mb-2"><strong>Research:</strong> {student.research.join(', ')}</p>
          <a href={`mailto:${student.email}`} class="text-blue-600 hover:text-blue-800 text-xs">
            📧 Contact
          </a>
        </div>
      ))}
    </div>
  </section>

  <!-- Visiting Researchers -->
  <section class="mb-16">
    <h2 class="text-3xl font-bold text-gray-900 mb-8">Visiting Researchers</h2>
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
      {visitors.map((visitor) => (
        <div class="bg-white rounded-lg shadow-md border p-6 hover:shadow-lg transition-shadow">
          <div class="flex items-start space-x-4">
            <div class="w-16 h-16 bg-gray-200 rounded-lg flex items-center justify-center flex-shrink-0">
              <span class="text-xl">👤</span>
            </div>
            <div class="flex-1">
              <h3 class="text-lg font-semibold text-gray-900">{visitor.name}</h3>
              <p class="text-purple-600 font-medium mb-1">{visitor.title}</p>
              <p class="text-sm text-gray-600 mb-1"><strong>From:</strong> {visitor.affiliation}</p>
              <p class="text-sm text-gray-600 mb-2"><strong>Duration:</strong> {visitor.duration}</p>
              <p class="text-sm text-gray-600 mb-3"><strong>Research:</strong> {visitor.research.join(', ')}</p>
              <a href={`mailto:${visitor.email}`} class="text-blue-600 hover:text-blue-800 text-sm">
                📧 {visitor.email}
              </a>
            </div>
          </div>
        </div>
      ))}
    </div>
  </section>

  <!-- Alumni -->
  <section class="mb-16">
    <h2 class="text-3xl font-bold text-gray-900 mb-8">Alumni</h2>
    <div class="bg-white rounded-lg shadow-md border p-8">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
        {alumni.map((alum) => (
          <div class="border-l-4 border-blue-600 pl-4">
            <h3 class="font-semibold text-gray-900">{alum.name}</h3>
            <p class="text-sm text-blue-600 mb-1">{alum.degree}</p>
            <p class="text-sm text-gray-600 mb-1"><strong>Current:</strong> {alum.current}</p>
            {alum.thesis && (
              <p class="text-sm text-gray-600"><strong>Thesis:</strong> {alum.thesis}</p>
            )}
          </div>
        ))}
      </div>
      
      <div class="mt-8 pt-8 border-t text-center">
        <p class="text-gray-600 mb-4">
          Our alumni have gone on to successful careers in academia and industry around the world.
        </p>
        <a href="#" class="text-blue-600 hover:text-blue-800 font-medium">
          View Complete Alumni Directory →
        </a>
      </div>
    </div>
  </section>

      <!-- Join Us -->
      <section class="bg-gradient-to-br from-blue-50 via-indigo-50 to-purple-50 rounded-3xl p-8 lg:p-12">
        <div class="text-center">
          <h2 class="text-3xl sm:text-4xl font-bold text-gray-900 mb-4">Join Our Team</h2>
          <div class="w-24 h-1 bg-gradient-to-r from-blue-600 to-indigo-600 mx-auto mb-6"></div>
          <p class="text-xl text-gray-600 mb-12 max-w-3xl mx-auto leading-relaxed">
            We're always looking for motivated researchers and students to join our lab. 
            If you're interested in cutting-edge AI research, we'd love to hear from you.
          </p>
          
          <div class="grid grid-cols-1 md:grid-cols-3 gap-8 mb-12">
            <div class="bg-white p-8 rounded-2xl shadow-lg text-center hover:shadow-2xl transition-shadow duration-300">
              <div class="w-16 h-16 bg-gradient-to-br from-blue-500 to-blue-600 rounded-2xl flex items-center justify-center mx-auto mb-4">
                <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
