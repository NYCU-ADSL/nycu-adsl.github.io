import { getCollection } from 'astro:content';
import BaseLayout from '../layouts/BaseLayout.astro';
import Banner from '../components/Banner.astro';

const defaultMemberImage = "/images/person.svg";

const allMembers = await getCollection('member');

const categorize = (entries: any[]) => {
  const byPath = entries.map((e) => ({
    ...e,
    _path: e.id.split('/'),
  }));

  const pick = (member: any) => ({
    slug: member.slug,
    englishName: member.data.englishName,
    chineseName: member.data.chineseName,
    research: member.data.research || [],
    photo: member.data.photo || '',
    linkedin: member.data.linkedin,
    email: member.data.email,
    github: member.data.github,
    personalWebsite: member.data.personalWebsite,
    entryYear: member.data.entryYear,
  });

  // Folder layout: {current,alumni}/{phd,master}/{year}/{slug}.md
  const getYearFromPath = (p: string[]) => (p.length >= 3 ? Number(p[2]) : undefined);

  const currentPhD = byPath
    .filter(e => e._path[0] === 'current' && e._path[1] === 'phd')
    .map(e => ({ ...pick(e), entryYear: getYearFromPath(e._path) }))
    .sort((a, b) => a.englishName.localeCompare(b.englishName));

  const currentMaster = byPath
    .filter(e => e._path[0] === 'current' && e._path[1] === 'master')
    .map(e => ({ ...pick(e), entryYear: getYearFromPath(e._path) }))
    .sort((a, b) => (b.entryYear || 0) - (a.entryYear || 0) || a.englishName.localeCompare(b.englishName));

  const alumniPhD = byPath
    .filter(e => e._path[0] === 'alumni' && e._path[1] === 'phd')
    .map(e => ({ ...pick(e), entryYear: getYearFromPath(e._path) }))
    .sort((a, b) => a.englishName.localeCompare(b.englishName));

  const alumniMaster = byPath
    .filter(e => e._path[0] === 'alumni' && e._path[1] === 'master')
    .map(e => ({ ...pick(e), entryYear: getYearFromPath(e._path) }))
    .sort((a, b) => (b.entryYear || 0) - (a.entryYear || 0) || a.englishName.localeCompare(b.englishName));

  return { currentPhD, currentMaster, alumniPhD, alumniMaster };
};

const { currentPhD, currentMaster, alumniPhD, alumniMaster } = categorize(allMembers);
