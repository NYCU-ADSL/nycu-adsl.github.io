          <p class="text-xl text-gray-600 max-w-3xl mx-auto">
            Highlighting our most impactful research initiatives
          </p>
        </div>
        
        <div class="space-y-12">
          {selectedProjects.map((project, index) => (
            <div class={`bg-white rounded-3xl shadow-2xl border overflow-hidden ${
              index % 2 === 0 ? 'lg:flex' : 'lg:flex lg:flex-row-reverse'
            }`}>
              <div class="lg:flex-1 p-8 lg:p-12">
                <div class="flex items-center mb-6">
                  <span class={`px-4 py-2 rounded-full text-sm font-medium mr-4 ${
                    project.status === 'Active' 
                      ? 'bg-green-100 text-green-800' 
                      : 'bg-blue-100 text-blue-800'
                  }`}>
                    {project.status}
                  </span>
                  <span class="text-sm text-gray-500 bg-gray-100 px-3 py-1 rounded-full">{project.duration}</span>
                </div>
                
                <h3 class="text-2xl lg:text-3xl font-bold text-gray-900 mb-6">{project.title}</h3>
                <p class="text-gray-600 mb-8 leading-relaxed text-lg">{project.description}</p>
                
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-8">
