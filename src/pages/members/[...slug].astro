---
import { getCollection } from 'astro:content';
import BaseLayout from '../../layouts/BaseLayout.astro';
import Banner from '../../components/Banner.astro';

const defaultMemberImage = "/images/person.svg";

export async function getStaticPaths() {
  const members = await getCollection('member');
  return members.map(entry => ({
    params: { slug: entry.slug },
    props: { entry },
  }));
}

const { entry } = Astro.props;
const { Content } = await entry.render();
const { data } = entry;

// 取得成員的分類資訊 (current/alumni, phd/master, year)
const pathParts = entry.slug.split('/');
const status = pathParts[0]; // current or alumni
const degree = pathParts[1]; // phd or master
const year = pathParts[2]; // year

// 建立 PDF 檔案路徑（相對於成員資料夾）
const basePath = `/src/content/member/${entry.slug}`;
---

<BaseLayout 
  pageTitle={`${data.chineseName} ${data.englishName}`}
  description={`CV of ${data.englishName} - ${data.research.join(', ')}`}
>
  <div class="bg-white">
    <!-- Hero Section -->
    <Banner 
      title={`${data.chineseName} / ${data.englishName}`}
      subtitle={status === 'current' ? `Current ${degree === 'phd' ? 'PhD' : 'Master'} Student` : `${degree === 'phd' ? 'PhD' : 'Master'} Alumni`}
      imageUrl="https://images.unsplash.com/photo-1522071820081-009f0129c71c?auto=format&fit=crop&w=2134&q=80"
      heightClass="py-20"
      overlayClass="bg-black/60"
    />
    
    <div class="container mx-auto px-4 sm:px-6 lg:px-8 py-16">
      <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
        <!-- 左側：個人資訊卡片 (1/3) -->
        <div class="lg:col-span-1">
          <!-- Back Button -->
          <div class="mb-6">
            <a 
              href="/members" 
              class="inline-flex items-center text-blue-600 hover:text-blue-800 font-medium text-base py-1"
            >
              <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2.5">
                <path stroke-linecap="round" stroke-linejoin="round" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
              </svg>
              Back to Members
            </a>
          </div>

          <div class="bg-white rounded-xl border shadow-lg p-6 sticky top-8">
            <!-- 照片 -->
            <div class="w-full aspect-square rounded-lg bg-gray-100 overflow-hidden flex items-center justify-center mb-6">
              <img 
                src={data.photo?.src ?? defaultMemberImage} 
                alt={data.englishName} 
                class="w-full h-full object-cover"
              />
            </div>

            <!-- 姓名 -->
            <div class="text-center mb-6">
              <h2 class="text-2xl font-bold text-gray-900 mb-1">{data.chineseName}</h2>
              <h3 class="text-xl text-gray-700">{data.englishName}</h3>
              {year && (
                <p class="text-sm text-gray-500 mt-2">
                  {degree === 'phd' ? 'PhD' : 'Master'} • {year}
                </p>
              )}
            </div>

            <!-- 聯絡方式 -->
            <div class="space-y-3 mb-6">
              {data.email && (
                <a 
                  href={`mailto:${data.email}`} 
                  class="flex items-center gap-3 p-3 rounded-lg bg-gray-50 hover:bg-gray-100 transition-colors group"
                >
                  <div class="flex-shrink-0 w-10 h-10 rounded-full bg-gray-200 group-hover:bg-gray-300 flex items-center justify-center">
                    <svg class="w-5 h-5 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
                    </svg>
                  </div>
                  <div class="flex-1 min-w-0">
                    <p class="text-xs text-gray-500 font-medium">Email</p>
                    <p class="text-sm text-gray-900 truncate">{data.email}</p>
                  </div>
                </a>
              )}

              {data.linkedin && (
                <a 
                  href={data.linkedin} 
                  target="_blank" 
                  rel="noopener noreferrer"
                  class="flex items-center gap-3 p-3 rounded-lg bg-gray-50 hover:bg-blue-50 transition-colors group"
                >
                  <div class="flex-shrink-0 w-10 h-10 rounded-full bg-blue-100 group-hover:bg-blue-200 flex items-center justify-center">
                    <svg class="w-5 h-5 text-blue-600" fill="currentColor" viewBox="0 0 24 24">
                      <path d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"/>
                    </svg>
                  </div>
                  <div class="flex-1 min-w-0">
                    <p class="text-xs text-gray-500 font-medium">LinkedIn</p>
                    <p class="text-sm text-blue-600 truncate">Profile</p>
                  </div>
                </a>
              )}

              {data.github && (
                <a 
                  href={data.github} 
                  target="_blank" 
                  rel="noopener noreferrer"
                  class="flex items-center gap-3 p-3 rounded-lg bg-gray-50 hover:bg-gray-100 transition-colors group"
                >
                  <div class="flex-shrink-0 w-10 h-10 rounded-full bg-gray-200 group-hover:bg-gray-800 flex items-center justify-center">
                    <svg class="w-5 h-5 text-gray-700 group-hover:text-white" fill="currentColor" viewBox="0 0 24 24">
                      <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
                    </svg>
                  </div>
                  <div class="flex-1 min-w-0">
                    <p class="text-xs text-gray-500 font-medium">GitHub</p>
                    <p class="text-sm text-gray-900 truncate">Profile</p>
                  </div>
                </a>
              )}

              {data.personalWebsite && (
                <a 
                  href={data.personalWebsite} 
                  target="_blank" 
                  rel="noopener noreferrer"
                  class="flex items-center gap-3 p-3 rounded-lg bg-gray-50 hover:bg-indigo-50 transition-colors group"
                >
                  <div class="flex-shrink-0 w-10 h-10 rounded-full bg-indigo-100 group-hover:bg-indigo-200 flex items-center justify-center">
                    <svg class="w-5 h-5 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9a9 9 0 01-9-9m9 9c1.657 0 3-4.03 3-9s-1.343-9-3-9m0 18c-1.657 0-3-4.03-3-9s1.343-9 3-9m-9 9a9 9 0 019-9"/>
                    </svg>
                  </div>
                  <div class="flex-1 min-w-0">
                    <p class="text-xs text-gray-500 font-medium">Personal Website</p>
                    <p class="text-sm text-indigo-600 truncate">Visit</p>
                  </div>
                </a>
              )}
            </div>

            <!-- Research Interests -->
            {data.research && data.research.length > 0 && (
              <div>
                <h4 class="text-sm font-semibold text-gray-900 mb-3">Research Interests</h4>
                <div class="flex flex-wrap gap-2">
                  {data.research.map((topic) => (
                    <span class="px-3 py-1 bg-blue-50 text-blue-700 text-xs rounded-full border border-blue-100">
                      {topic}
                    </span>
                  ))}
                </div>
              </div>
            )}

            <!-- 論文與簡報下載 -->
            {(data.thesis || data.thesisPresentation) && (
              <div class="mt-6 pt-6 border-t border-gray-200">
                <h4 class="text-sm font-semibold text-gray-900 mb-2 flex items-center gap-2">
                  <svg class="w-5 h-5 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"/>
                  </svg>
                  Thesis
                </h4>
                {data.thesisTitle && (
                  <p class="text-xs text-gray-600 mb-3 leading-relaxed">{data.thesisTitle}</p>
                )}
                <div class="space-y-2">
                  {data.thesis && (
                    <a 
                      href={`${basePath}/${data.thesis}`}
                      download
                      class="flex items-center justify-between p-3 bg-blue-50 rounded-lg border border-blue-100 hover:border-blue-300 hover:shadow-md transition-all group"
                    >
                      <div class="flex items-center gap-2">
                        <div class="w-8 h-8 rounded-lg bg-red-100 flex items-center justify-center group-hover:bg-red-200 transition-colors flex-shrink-0">
                          <svg class="w-4 h-4 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 21h10a2 2 0 002-2V9.414a1 1 0 00-.293-.707l-5.414-5.414A1 1 0 0012.586 3H7a2 2 0 00-2 2v14a2 2 0 002 2z"/>
                          </svg>
                        </div>
                        <div class="min-w-0">
                          <p class="text-sm font-semibold text-gray-900 truncate">{degree === 'phd' ? '博士' : '碩士'}論文</p>
                          <p class="text-xs text-gray-500">Thesis PDF</p>
                        </div>
                      </div>
                      <svg class="w-4 h-4 text-blue-600 group-hover:translate-y-0.5 transition-transform flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4"/>
                      </svg>
                    </a>
                  )}

                  {data.thesisPresentation && (
                    <a 
                      href={`${basePath}/${data.thesisPresentation}`}
                      download
                      class="flex items-center justify-between p-3 bg-blue-50 rounded-lg border border-blue-100 hover:border-blue-300 hover:shadow-md transition-all group"
                    >
                      <div class="flex items-center gap-2">
                        <div class="w-8 h-8 rounded-lg bg-orange-100 flex items-center justify-center group-hover:bg-orange-200 transition-colors flex-shrink-0">
                          <svg class="w-4 h-4 text-orange-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 21h10a2 2 0 002-2V9.414a1 1 0 00-.293-.707l-5.414-5.414A1 1 0 0012.586 3H7a2 2 0 00-2 2v14a2 2 0 002 2z"/>
                          </svg>
                        </div>
                        <div class="min-w-0">
                          <p class="text-sm font-semibold text-gray-900 truncate">口試簡報</p>
                          <p class="text-xs text-gray-500">Presentation PDF</p>
                        </div>
                      </div>
                      <svg class="w-4 h-4 text-blue-600 group-hover:translate-y-0.5 transition-transform flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4"/>
                      </svg>
                    </a>
                  )}
                </div>
              </div>
            )}
          </div>
        </div>

        <!-- 右側：CV 內容 (2/3) -->
        <div class="lg:col-span-2">
          <!-- 空白佔位，與左側 Back Button 對齊 -->
          <div class="h-[56px]"></div>

          <!-- CV Content -->
          <div class="bg-white rounded-xl border shadow-sm p-8">
            <div class="prose prose-lg prose-slate max-w-none prose-headings:font-bold prose-h2:text-2xl prose-h2:mt-8 prose-h2:mb-4 prose-h3:text-xl prose-h3:mt-6 prose-h3:mb-3 prose-h4:text-lg prose-h4:mt-4 prose-h4:mb-2">
              <Content />
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</BaseLayout>

