---
export interface Props {
  title?: string;
  description?: string;
  pageTitle?: string;
}

const { 
  title = "ADSL - Advanced Database System Laboratory", 
  description = "Advanced Database System Laboratory at National Yang Ming Chiao Tung University",
  pageTitle 
} = Astro.props;

const fullTitle = pageTitle ? `${pageTitle} | ${title}` : title;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href={`${import.meta.env.BASE_URL}favicon.svg`} />
    <meta name="generator" content={Astro.generator} />
    <title>{fullTitle}</title>
  </head>
  <body class="min-h-screen bg-gray-50">
    <header class="bg-white shadow-sm border-b">
      <nav class="container mx-auto px-4 py-4">
        <div class="flex items-center justify-between">
          <div class="flex items-center space-x-3">
            <img src={`${import.meta.env.BASE_URL}logo.svg`} alt="NYCU ADSL" class="h-10 w-10" />
            <div>
              <h1 class="text-xl font-bold text-gray-900">ADSL</h1>
              <p class="text-sm text-gray-600">Advanced Database System Laboratory</p>
            </div>
          </div>
          
          <div class="hidden md:flex space-x-6">
            <a href="/" class="text-gray-700 hover:text-blue-600 font-medium transition-colors">Home</a>
            <a href={`${import.meta.env.BASE_URL}research`} class="text-gray-700 hover:text-blue-600 font-medium transition-colors">Research/Project</a>
            <a href={`${import.meta.env.BASE_URL}teaching`} class="text-gray-700 hover:text-blue-600 font-medium transition-colors">Teaching</a>
            <a href={`${import.meta.env.BASE_URL}publications`} class="text-gray-700 hover:text-blue-600 font-medium transition-colors">Publications</a>
            <a href={`${import.meta.env.BASE_URL}members`} class="text-gray-700 hover:text-blue-600 font-medium transition-colors">Members</a>
          </div>
          
          <button class="md:hidden" id="mobile-menu-button">
            <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
            </svg>
          </button>
        </div>
        
        <div class="md:hidden mt-4 hidden" id="mobile-menu">
          <div class="space-y-2 pt-2 pb-4 border-t">
            <a href="/" class="block text-gray-700 hover:text-blue-600 py-2">Home</a>
            <a href={`${import.meta.env.BASE_URL}research`} class="block text-gray-700 hover:text-blue-600 py-2">Research/Project</a>
            <a href={`${import.meta.env.BASE_URL}teaching`} class="block text-gray-700 hover:text-blue-600 py-2">Teaching</a>
            <a href={`${import.meta.env.BASE_URL}publications`} class="block text-gray-700 hover:text-blue-600 py-2">Publications</a>
            <a href={`${import.meta.env.BASE_URL}members`} class="block text-gray-700 hover:text-blue-600 py-2">Members</a>
          </div>
        </div>
      </nav>
    </header>

    <main class="container mx-auto px-4 py-8">
      <slot />
    </main>

    <footer class="bg-gray-800 text-white mt-16">
      <div class="container mx-auto px-4 py-8">
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
          <div>
            <h3 class="text-lg font-semibold mb-4">ADSL</h3>
            <p class="text-gray-300">Advanced Database System Laboratory</p>
            <p class="text-gray-300">National Yang Ming Chiao Tung University</p>
          </div>
          <div>
            <h3 class="text-lg font-semibold mb-4">Contact</h3>
            <p class="text-gray-300">ADDRESS: National Yang Ming Chiao Tung University, EC446A</p>
            <p class="text-gray-300">Department of Computer Science</p>
            <p class="text-gray-300">1001 University Road, Hsinchu 30010, Taiwan (R.O.C.)</p>
            <p class="text-gray-300 mt-2">PHONE: 886-3-5712121 ext.56656</p>
            <p class="text-gray-300">EMAIL: <a class="underline hover:text-white" href="mailto:wcpeng@cs.nctu.edu.tw">wcpeng@cs.nctu.edu.tw</a></p>
          </div>
          <div>
            <h3 class="text-lg font-semibold mb-4">Links</h3>
            <div class="space-y-2">
              <a href="#" class="text-gray-300 hover:text-white block transition-colors">Personal Page</a>
              <a href={`${import.meta.env.BASE_URL}publications`} class="text-gray-300 hover:text-white block transition-colors">Publications</a>
            </div>
          </div>
        </div>
        <div class="border-t border-gray-700 mt-8 pt-8 text-center text-gray-400">
          <p>&copy; 2025 ADSL. All rights reserved.</p>
        </div>
      </div>
    </footer>

    <script>
      document.addEventListener('DOMContentLoaded', () => {
        const mobileMenuButton = document.getElementById('mobile-menu-button');
        const mobileMenu = document.getElementById('mobile-menu');
        
        mobileMenuButton?.addEventListener('click', () => {
          mobileMenu?.classList.toggle('hidden');
        });
      });
    </script>
  </body>
</html>